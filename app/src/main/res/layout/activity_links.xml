<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ndma"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="#E67B68EE">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NDMA"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_send_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ndrf"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="#E67B68EE">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NDRF"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_send_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/nidm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="#E67B68EE">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NIDM"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_send_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/npoi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="#E67B68EE">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="National Portal of India"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_send_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/adrc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="#E67B68EE">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Asian Disaster Reduction Center"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_send_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/mha"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:background="#E67B68EE">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Disaster Management Division"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_send_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>